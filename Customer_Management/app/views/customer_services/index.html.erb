<p id="notice"><%= notice %></p>

<h1>Customer Services</h1>

<table>
  <thead>
    <tr>
      <th>Customer</th>
      <th>Deal date</th>
      <th>Staff</th>
      <th>Issue</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customer_services.each do |customer_service| %>
      <tr>
        <td><%= customer_service.customer_id %></td>
        <td><%= customer_service.deal_date %></td>
        <td><%= customer_service.staff_id %></td>
        <td><%= customer_service.issue %></td>
        <td><%= link_to 'Show', customer_service %></td>
        <td><%= link_to 'Edit', edit_customer_service_path(customer_service) %></td>
        <td><%= link_to 'Destroy', customer_service, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

