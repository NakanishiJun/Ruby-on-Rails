<p id="notice"><%= notice %></p>

<h1>Distributors</h1>

<table>
  <thead>
    <tr>
      <th>Distributor name</th>
      <th>Distributor rep</th>
      <th>Distributor rep tel</th>
      <th>Distributor rep mail</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @distributors.each do |distributor| %>
      <tr>
        <td><%= distributor.distributor_name %></td>
        <td><%= distributor.distributor_rep %></td>
        <td><%= distributor.distributor_rep_tel %></td>
        <td><%= distributor.distributor_rep_mail %></td>
        <td><%= link_to 'Show', distributor %></td>
        <td><%= link_to 'Edit', edit_distributor_path(distributor) %></td>
        <td><%= link_to 'Destroy', distributor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Distributor', new_distributor_path %>
